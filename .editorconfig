# EditorConfig is awesome: https://EditorConfig.org
# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Python type stubs
[*.pyi]
indent_style = space
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{cmd,bat}]
end_of_line = crlf

# Configuration files
[{Makefile,*.mk}]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# GitHub Actions workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Claude Code configuration
[.claude/**]
indent_style = space
indent_size = 2

# Environment files
[.env*]
insert_final_newline = false

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Jupyter notebooks (if added later)
[*.ipynb]
indent_style = space
indent_size = 2

# Ignore files in certain directories
[{archive,query_logs,results,data}/**]
insert_final_newline = unset
trim_trailing_whitespace = unset

# Log files
[*.log]
insert_final_newline = false
trim_trailing_whitespace = false

# Text files
[*.txt]
max_line_length = unset
